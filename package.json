{
  "name": "tailwindcss-minimal-setup",
  "version": "1.0.0",
  "description": "Setup Tailwind CSS in 20 seconds without node_modules",
  "main": "tailwind.config.js",
  "scripts": {
    "sprites": "gulp sprites",
    "tailwind": "postcss tailwind.css -o dist/tailwind.css",
    "minify": "postcss dist/tailwind.css -u cssnano --no-map -o dist/tailwind.min.css",
    "build": "npm run tailwind",
    "production": "npm run tailwind && npm run minify",
    "deploy": "git push heroku master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomaszbujnowicz/tailwindcss-minimal-setup.git"
  },
  "keywords": [],
  "author": {
    "name": "Tomasz Bujnowicz",
    "email": "hi@tomaszbujnowicz.com",
    "url": "https://www.tomaszbujnowicz.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomaszbujnowicz/tailwindcss-minimal-setup/issues"
  },
  "homepage": "https://github.com/tomaszbujnowicz/tailwindcss-minimal-setup#readme",
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.2.0",
    "autoprefixer": "^10.1.0",
    "color": "^3.1.2",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-svg-sprite": "^1.5.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "svg-sprite": "^1.5.0",
    "tailwindcss": "^2.0.2",
    "tailwindcss-cli": "^0.1.2"
  },
  "devDependencies": {
    "@ky-is/tailwindcss-plugin-width-height": "^1.0.0"
  }
}
